---
import Timeframes from './Timeframes/Timeframes';
import imageJeremy from '/images/image-jeremy.png'
---

<article class="card profile-card">
  <section class="profile-info">
    <img src={imageJeremy} alt="Jeremy" width="60" height="60"/>
    <div>
      <p>Report for</p>
      <h1>Jeremy Robson</h1>
    </div>
  </section>
  
  <Timeframes client:load />
<article/>

<style>
  .profile-card {
    padding: 0;
    background-color: var(--dark-blue);
    border-radius: 1.6rem;
  }
  
  .profile-info {
    padding: 3.2rem 2.4rem;
    display: flex;
    align-items: center;
    gap: 1.5rem;
    background-color: var(--blue);
    border-radius: 1.6rem;
  }

  h1 {
    margin: 0;
    color: #fff;
    font-weight: 300;
  }

  .profile-info p {
    font-size: 1.5rem;
    margin: 0 0 .5rem 0;
    color: var(--pale-blue);
  }

  img {
    border: .35rem solid #fff;
    border-radius: 50px;  
  }

  @media screen and (min-width: 1024px) {
    .profile-info {
      padding-bottom: 10rem;
      flex-direction: column;
      align-items: flex-start;
    }

    h1 {
      font-size: 4rem;
    }

    img {
      width: 70px;
      height: 70px;
      margin-bottom: 2rem;
    }
  }
</style>