---
import Card from '../components/Card.astro';
import dataMock from '../../public/data.json'
---

<ul role="list" class="link-card-grid">
  {
    dataMock.map(el => {
      const { title } = el;
      return (
        <Card
          title={title}
          currentTime={32}
          lastTime={5}
        />
      )
    })
  }
</ul>

<style>
  .link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2.5rem;
		padding: 0;
    margin: 2.5rem 0 0;
	}
</style>